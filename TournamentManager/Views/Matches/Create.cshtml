@model TournamentManager.Models.Match

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Match</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TeamAName" id="TeamAName" />
            <input type="hidden" asp-for="TeamBName" id="TeamBName" />
            <div class="form-group">
                <label asp-for="TournamentId" class="control-label">Tournament</label>
                <select asp-for="TournamentId" class="form-control" asp-items="ViewBag.TournamentId"></select>
                <span asp-validation-for="TournamentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ScheduledTime" class="control-label"></label>
                <input asp-for="ScheduledTime" class="form-control" />
                <span asp-validation-for="ScheduledTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Round" class="control-label">Round</label>
                <select asp-for="Round" class="form-control" asp-items="ViewBag.Round"></select>
                <span asp-validation-for="Round" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TeamAId" class="control-label"></label>
                <select asp-for="TeamAId" class="form-control" asp-items="ViewBag.TeamAId"></select>
            </div>
            <div class="form-group">
                <label asp-for="TeamBId" class="control-label"></label>
                <select asp-for="TeamBId" class ="form-control" asp-items="ViewBag.TeamBId"></select>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsCompleted" /> @Html.DisplayNameFor(model => model.IsCompleted)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="WinnerId" class="control-label"></label>
                <select asp-for="WinnerId" class ="form-control" asp-items="ViewBag.WinnerId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Score" class="control-label"></label>
                <input asp-for="Score" class="form-control" />
                <span asp-validation-for="Score" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
    <script>
        $(document).ready(function () {
            // Get references to the select elements and the name input fields
            var teamASelect = $("#TeamAId");
            var teamBSelect = $("#TeamBId");
            var teamAName = $("#TeamAName");
            var teamBName = $("#TeamBName");

            // Attach change event handlers to the select elements
            teamASelect.change(function () {
                // Get the selected option's text (team name) and update the name input
                teamAName.val($(this).find("option:selected").text());
            });

            teamBSelect.change(function () {
                // Get the selected option's text (team name) and update the name input
                teamBName.val($(this).find("option:selected").text());
            });
        });
    </script>
}
